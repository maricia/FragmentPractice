<?xml version="1.0" encoding="utf-8"?>


<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    tools:showIn="@layout/activity_main">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="372dp"
            android:layout_span="3"
            android:fontFamily="casual"
            android:text="MARICIA ALLEMAN"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            android:textStyle="bold" />

    </TableRow>

        <TableRow
            android:id="@+id/websiteTableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/bigImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:paddingStart="14dp"
                app:srcCompat="@mipmap/ic_me" />

            <TableLayout
                android:layout_width="295dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:padding="12dp">

                <TableRow>

                    <ImageView
                        android:id="@+id/websiteImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_column="1"
                        app:srcCompat="@drawable/ic_public_white" />

                    <TextView
                        android:id="@+id/websiteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:paddingStart="12dp"
                        android:text="www.maricia.com"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>


                    <ImageView
                        android:id="@+id/phoneImageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_column="1"
                        app:srcCompat="@drawable/ic_phone_white" />

                    <TextView
                        android:id="@+id/phonetextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:autoLink="phone"
                        android:fontFamily="casual"
                        android:paddingStart="12dp"
                        android:text="000.000.0000"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/mailImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_column="1"
                        app:srcCompat="@drawable/ic_email_white" />


                    <TextView
                        android:id="@+id/mailTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:autoLink="email"
                        android:contextClickable="false"
                        android:fontFamily="casual"
                        android:lineSpacingExtra="12sp"
                        android:onClick="onClick"
                        android:paddingStart="12dp"
                        android:text="maricia.a.alleman@gmail.com"
                        android:textSize="12sp" />

                </TableRow>
            </TableLayout>

        </TableRow>


    </TableLayout>

