<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="6dp"
    android:id="@+id/work_item_view">

    <ImageView
        android:id="@+id/work_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_map_black_24dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp">

    <TextView
        android:id="@+id/work_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="6dp"
        android:text="2014-12 - present"
        android:textAlignment="viewStart"
        android:textColor="@color/mapbox_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/work_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="University of Texas of the Permian Basin - System Analyst II"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/mapbox_blue"
        android:textStyle="bold" />
</LinearLayout>




</LinearLayout>